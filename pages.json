{
	"easycom": {
		"^u-(.*)": "@/uni_modules/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "推荐"
			}
		},
		{
			"path": "pages/my/index",
			"style": {
				"navigationBarTitleText": "个人中心"
			}
		},
		{
			"path": "pages/song-list/index",
			"style": {
				"enablePullDownRefresh": false,
				"navigationBarTitleText": "歌曲列表"
			}
		},
		{
			"path": "pages/album-list/album-list",
			"style": {
				"navigationBarTitleText": "歌单列表",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/rank-list/rank-list",
			"style": {
				"navigationBarTitleText": "排行榜",
				"enablePullDownRefresh": false
			}

		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#7A7E83",
		"selectedColor": "#d81e06",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [{
			"pagePath": "pages/index/index",
			"iconPath": "static/推荐2.png",
			"selectedIconPath": "static/推荐1.png",
			"text": "推荐"
		}, {
			"pagePath": "pages/my/index",
			"iconPath": "static/我的2.png",
			"selectedIconPath": "static/我的1.png",
			"text": "我的"
		}]
	}
}
